{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/-assets/js/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/-assets/js/**/*"],
  "exclude": ["node_modules"]
}
